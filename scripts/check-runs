#!/bin/bash
# Quick wrapper to check scheduled runs
# Usage:
#   ./scripts/check-runs           # Last 24 hours
#   ./scripts/check-runs 48        # Last 48 hours
#   ./scripts/check-runs 168       # Last week

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( cd "$SCRIPT_DIR/.." && pwd )"

# Activate virtual environment
source "$PROJECT_ROOT/.venv/bin/activate"

# Default to 24 hours if no argument provided
HOURS=${1:-24}

# Run the Python script
python "$SCRIPT_DIR/check_scheduled_runs.py" --hours "$HOURS"
